{
  "manifest_version": 3,
  "name": "n8n Pro - AI Assistant",
  "version": "1.0.0",
  "description": "AI-powered Chrome/Edge extension for n8n workflow automation",
  "author": "Shy Agam <us@bespunky.io>",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "notifications"
  ],
  
  "host_permissions": [
    "http://localhost:*/*",
    "https://*.n8n.io/*",
    "https://*.n8n.cloud/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://localhost:*/*",
        "https://*.n8n.io/*",
        "https://*.n8n.cloud/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "n8n Pro AI Assistant"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["panel.js", "panel.css"],
      "matches": [
        "http://localhost:*/*",
        "https://*.n8n.io/*",
        "https://*.n8n.cloud/*"
      ]
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
