{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Extension (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5678",
            "webRoot": "${workspaceFolder}/dist",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/src/*"
            }
        },
        {
            "name": "Debug Panel (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/src/panel",
            "sourceMaps": true
        },
        {
            "name": "Debug Background Worker",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/dist"
        },
        {
            "name": "Debug n8n Integration",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5678",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.chrome-debug-profile"
        }
    ]
}
